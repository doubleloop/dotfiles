[user]
	name = Jakub Łuczyński
	email = jakub.luczynski@codilime.com
[help]
	autocorrect = 1
[color]
	ui = true
[core]
	autocrlf = input
	fileMode = false
[diff]
	renames = copies
	submodule = log
	algorithm = patience
[merge]
	tool = pycharm
	conflictstyle = diff3
[mergetool]
	keepBackup = false
[mergetool "pycharm"]
    cmd = /usr/local/bin/charm merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
[mergetool "nfugitive"]
    cmd = nvim -f -c "Gdiff" "$MERGED"
[push]
	default = simple
	recurseSubmodules = check
[status]
	submodulesummary = 1
